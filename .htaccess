# Proteção dos diretórios sensíveis
<FilesMatch "\.(json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Permite acesso apenas via PHP aos arquivos JSON
<Files ~ "\.json$">
    Order allow,deny
    Deny from all
</Files>

# Rewrite Engine
RewriteEngine On

# Redirecionar para HTTPS (descomente em produção com SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Proteção contra acesso direto aos arquivos de include
<IfModule mod_rewrite.c>
    RewriteRule ^includes/(.*)$ - [F,L]
</IfModule>

# Configurações de segurança
<IfModule mod_headers.c>
    # Proteção XSS
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevenir clickjacking
    Header always append X-Frame-Options SAMEORIGIN
    
    # Prevenir MIME sniffing
    Header set X-Content-Type-Options nosniff
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Desabilitar listagem de diretórios
Options -Indexes

# Definir página de erro personalizada (opcional)
# ErrorDocument 404 /404.php
# ErrorDocument 500 /500.php

# Configurações de PHP (se permitido no .htaccess)
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log logs/php_error.log
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value session.cookie_httponly 1
</IfModule>

# Proteção do arquivo .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Proteção de arquivos de configuração
<FilesMatch "^(config\.php|auth\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Cache para recursos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>
