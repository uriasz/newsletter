# Desabilitar listagem de diretórios
Options -Indexes

# Proteção dos arquivos JSON
<FilesMatch "\.(json)$">
    <IfVersion < 2.4>
        Order allow,deny
        Deny from all
    </IfVersion>
    <IfVersion >= 2.4>
        Require all denied
    </IfVersion>
</FilesMatch>

# Proteção do arquivo .htaccess
<Files .htaccess>
    <IfVersion < 2.4>
        Order allow,deny
        Deny from all
    </IfVersion>
    <IfVersion >= 2.4>
        Require all denied
    </IfVersion>
</Files>

# Proteção de arquivos de configuração sensíveis
<FilesMatch "^(config\.php|db_noticias\.php|auth\.php)$">
    <IfVersion < 2.4>
        Order allow,deny
        Deny from all
    </IfVersion>
    <IfVersion >= 2.4>
        Require all denied
    </IfVersion>
</FilesMatch>

# Configurações de segurança básicas (apenas se mod_headers estiver disponível)
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options nosniff
</IfModule>

